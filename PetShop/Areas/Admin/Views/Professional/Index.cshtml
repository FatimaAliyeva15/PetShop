@using PetShop_Core.Models;
@model List<Professional>

@{
    int count = 0;
}

<h1>
    Professionals

    <a class="btn btn-primary" asp-action="Create">Create</a>
</h1>

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    count++;
                    <tr>
                    <td>@count</td>
                    <td>@item.Fullname</td>
                    <td>@item.Description</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="~/upload/professional/@item.ImgUrl" />
                        </div>
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Professional" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Professional" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>